{
  "name": "lochmueller/seal",
  "type": "typo3-cms-extension",
  "description": "SEAL - Search Engine Abstraction Layer",
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "Lochmueller\\Seal\\": "Classes/"
    }
  },
  "require": {
    "php": "^8.3",
    "typo3/cms-core": "^13.4",
    "typo3/cms-extbase": "^13.4",
    "cmsig/seal": "^0.9"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "seal",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "scripts": {
    "code-fix": "PHP_CS_FIXER_IGNORE_ENV=1 .Build/bin/php-cs-fixer fix Classes --rules=@PER-CS2.0:risky,@PER-CS2.0,declare_strict_types --allow-risky yes"
  }
}
